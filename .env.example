# דוגמא לקובץ הגדרות סביבה
# העתק קובץ זה ל-.env וערוך את הערכים

# טוקן בוט טלגרם (חובה)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# סביבת הפעלה (development/production/testing)
BOT_ENV=development

# הגדרות מסד נתונים
DATABASE_NAME=todo_tasks.db

# הגדרות לוגים
LOG_LEVEL=INFO

# הגדרות זמן
TIMEZONE=Asia/Jerusalem
DAILY_REMINDER_TIME=09:00

# הגדרות מתקדמות (אופציונלי)
ENABLE_ENHANCED_FEATURES=true
ENABLE_STATISTICS=true
ENABLE_BACKUPS=true

# הגדרות מקסימום (אופציונלי)
MAX_TASK_LENGTH=1000
MAX_CATEGORY_LENGTH=100
MAX_TASKS_PER_PAGE=15

# מזהי מנהלים (רשימה מופרדת בפסיקים)
ADMIN_USER_IDS=123456789,987654321

# הגדרות גיבוי (אופציונלי)
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_KEEP_DAYS=7

# הגדרות ענן (לעתיד)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=your-backup-bucket

# הגדרות אינטגרציות (לעתיד)
# GOOGLE_CALENDAR_CLIENT_ID=your_client_id
# GOOGLE_CALENDAR_CLIENT_SECRET=your_client_secret